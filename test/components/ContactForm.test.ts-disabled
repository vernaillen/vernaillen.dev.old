import { shallowMount } from '@vue/test-utils'
import ContactForm from '@/components/ContactForm.vue'

describe('ContactForm.vue', () => {
  it('should render', async () => {
    const useReCaptcha = {
      executeRecaptcha: vi.fn(),
      recaptchaLoaded: vi.fn(),
    }
    const wrapper = shallowMount(ContactForm, {
      global: {
        mocks: {
          useReCaptcha,
        },
      },
    })
    expect(wrapper.find('form').exists()).toBe(true)
    expect(useReCaptcha.executeRecaptcha).toHaveBeenCalledTimes(1)
    expect(useReCaptcha.recaptchaLoaded).toHaveBeenCalledTimes(1)
  })
})
